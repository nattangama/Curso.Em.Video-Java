public class IdiomaDoSistema {
    //percebisse que é mais fácil e rápido colocar o getProperty direto no Sout.
    public static void main(String[] args) {
        System.out.println("Linguagem: "+System.getProperty("user.language"));
        System.out.println("País: "+System.getProperty("user.country"));
    } 
  OU
}
 import java.util.Locale;
public class IdiomaDoSistema {   
    public static void main(String[] args) {
         Locale loc = Locale.getDefault();
   System.out.print("o seu sistema esta configurado para ");
   System.out.println (loc.getDisplayLanguage());
   System.out.println (loc.getLanguage());
   

  }
}
